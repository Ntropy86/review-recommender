# Environment Configuration
ENVIRONMENT=development

# Model Configuration
EMB_MODEL=BAAI/bge-small-en-v1.5
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8501
APP_TITLE="Review Search Copilot"

# Data Paths (relative to project root)
DATA_DIR=data/processed
PRODUCT_EMB_FILE=product_emb.npy
PRODUCT_META_FILE=product_emb_meta.parquet
REVIEWS_EMB_FILE=reviews_with_embeddings.parquet
BM25_FILE=product_bm25.pkl

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# Performance Settings
MAX_REVIEWS_SCAN=300000
DEFAULT_POOL_SIZE=150
CACHE_TTL=3600

# Feature Flags
ENABLE_BM25=true
ENABLE_RERANKING=true
ENABLE_SNIPPETS=true
ENABLE_METRICS_TAB=true

# Search Defaults
DEFAULT_K=10
DEFAULT_RERANK_K=50
DEFAULT_MIN_REVIEWS=8
DEFAULT_W_DENSE=0.55
DEFAULT_W_BM25=0.20
DEFAULT_W_RERANK=0.20
DEFAULT_W_PRIOR=0.20
DEFAULT_W_BEST=0.10
DEFAULT_GATE_PENALTY=0.5

# Security Settings (for production)
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
# HTTPS_ONLY=false

# External Services (if needed)
# OPENAI_API_KEY=your-openai-key
# HUGGINGFACE_TOKEN=your-hf-token